<!DOCTYPE html>
<html lang="en">
<head>
  <title>Vertex 360</title>
  <meta name="description" content="" />
  {{>head}}
  <style>
    .item-preview {
      display: flex;
    }

    .item-preview a {
      text-decoration: none;
    }

    .item-preview img {
      border: 1px solid #ededed;
    }
  </style>
</head>

<body style="padding-top:0px">
<div class="container pt-2 pb-4">
	<div class="row justify-content-between">
		<div class="col-md-8">
      <h1 class="mb-4">Store</h1>

      {{#items}}
      <div class="item-preview mb-3">
        <a href="/widget/item/{{id}}">
          <img src="{{{image}}}=s120-c" />
        </a>
        <div class="ml-2">
          <a href="/widget/item/{{id}}">
            {{ name }}
            <span style="margin:6px">&middot;</span>
            <span>${{ price }}</span>
          </a>
          <p><a style="color:#212529;" href="#">{{description}}</a></p>
        </div>
      </div>

      {{/items}}

		</div>
	</div>
</div>
  {{>footer}}
  {{>auth}}
  <a id="nav-register" style="display:none;background:#03a87c;color:#fff !important" class="nav-link" href="#" data-toggle="modal" data-target="#register-modal">JOIN VERTEX</a>


  {{>scripts}}
  <script type="text/javascript" src="{{{cdn}}}/js/mustache.js"></script>

</body>
</html>
