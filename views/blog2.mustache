      /*timeline */
      .timeline .media {
        position: relative;
      }
      .timeline .media:after {
        content: '';
        position: absolute;
        border-radius: 4px;
        top: 10px;
        left: 41px;
        width: 6px;
        height: 100%;
        background-color: #f8f9fa;
        z-index: -1;
      }
      .timeline .media:last-child:after {
