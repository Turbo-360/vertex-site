<!DOCTYPE html>
<head>
  {{>head}}
  <style>
    .template-details {
      text-align: right
    }

    .template-details img {
      width: 32px;
      border-radius: 50%;
      margin-left: 4px;
    }
  </style>
</head>

<body>
  <div id="wrapper">
    {{>nav}}
    <div class="clearfix"></div>


  <div class="fs-container">

  	<div class="fs-inner-container content">
  		<div class="fs-content">

  			<section class="search" style="min-height:800px">
          <div class="user-profile-titlebar">
            <div class="user-profile-avatar">
              <img src="{{{profile.image}}}=s512-c" alt="Vertex 360">
            </div>
            <div class="user-profile-name">
              <h2 class="margin-bottom-0 capitalize">{{profile.firstName}} {{profile.lastName}}</h2>
              <span>{{profile.username}}</span>
            </div>
          </div>
          <hr class="margin-top-40" />
          <div>
            <p>{{{profile.bio}}}</p>
          </div>
  			</section>


  		<section class="listings-container margin-top-30">
  			<div class="row fs-listings">
  				<div class="col-md-12">
  					<div class="copyrights margin-top-0">Â© 2017 Listeo. All Rights Reserved.</div>
  				</div>
  			</div>
  		</section>

  		</div>
  	</div>


  	<div class="fs-inner-container map-fixed" style="overflow:scroll">

      <!-- Listings -->
      <div class="row fs-listings margin-top-40">

        {{#sites}}
        <div class="col-lg-6 col-md-12">
					<a href="#" class="listing-item-container compact">
						<div class="listing-item">
							<img src="{{{image}}}=s1024" alt="Vertex 360">
							<div class="listing-item-details template-details">
                {{profile.username}}
                <img src="{{{profile.image}}}=s120-c" />
							</div>
							<div class="listing-item-content">
								<h3 style="line-height:22px">{{name}}</h3>
								<span>{{description}}</span>
							</div>
							<span class="like-icon"></span>
						</div>
					</a>
				</div>
        {{/sites}}

      </div>

  	</div>
  </div>


  </div>
  <!-- Wrapper / End -->

<script type="text/javascript">window.__PRELOADED__ = {{{preloaded}}}</script>
<script type="text/javascript" src="{{{cdn}}}/dist/js/vendor.min.js"></script>

</body>
</html>
