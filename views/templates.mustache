<!DOCTYPE html>
<head>
  {{>head}}
  <style>
    .template-details {
      text-align: right
    }

    .template-details img {
      width: 32px;
      border-radius: 50%;
      margin-left: 4px;
    }
  </style>
</head>

<body>
<div id="wrapper">
  {{>nav}}

<div class="clearfix"></div>

<div id="titlebar" class="gradient padding-top-120">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2>Templates</h2>
        <span>Grid Layout With Sidebar</span>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">

		<div class="col-md-12">
			<div class="main-search-input gray-style margin-top-0 margin-bottom-30">
				<div class="main-search-input-item">
					<input id="input-search-templates" type="text" placeholder="What are you looking for?" />
				</div>
				<div class="main-search-input-item">
					<select id="select-search-templates" data-placeholder="Select Category" class="chosen-select">
						<option value="featured">Featured</option>
						<option value="resume">Resume</option>
						<option value="landing">Landing Page</option>
						<option value="portfolio">Portfolio</option>
					</select>
				</div>

				<button id="btn-search-templates" class="button">Search</button>
			</div>
		</div>

		<div class="col-md-12">
			<div class="row">

        {{#templates}}
				<div class="col-lg-4 col-md-6">
					<a href="/template/{{slug}}" class="listing-item-container compact">
						<div class="listing-item">
							<img src="{{{image}}}=s1024" alt="Vertex 360">
							<div class="listing-item-details template-details">
                {{profile.username}}
                <img src="{{{profile.image}}}=s120-c" />
							</div>
							<div class="listing-item-content">
								<h3 style="line-height:22px">{{name}}</h3>
								<span>{{description}}</span>
							</div>
							<span class="like-icon"></span>
						</div>
					</a>
				</div>
        {{/templates}}

			</div>
		</div>

	</div>
</div>

{{>footer-dark}}

</div>

<script type="text/javascript">window.__PRELOADED__ = {{{preloaded}}}</script>
<script type="text/javascript" src="{{{cdn}}}/dist/js/vendor.min.js"></script>
<script>
  (function(){
    $('#btn-search-templates').click(function(event){
      if (event)
        event.preventDefault()

      const category = $('#select-search-templates').val()
      const tags = $('#input-search-templates').val()

      console.log('SEARCH TEMPLATES: ' + category)
      console.log('SEARCH TEMPLATES: ' + tags)

      $.ajax({
        url: '/api/site?limit=10',
        data: null,
        type: 'GET',
        success: function(response){
          if (response.confirmation != 'success'){
            alert(response.message)
            return
          }

          var templates = response.results
          console.log(JSON.stringify(templates))
        },
        error: function(){

        }
      })
    })
  })()
</script>

{{#cdn}}
{{>analytics}}
{{/cdn}}

</body>
</html>
