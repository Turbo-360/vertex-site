<script>
(function(){
  var data = window.__PRELOADED__
  if (data.stripe==null)
    return

  var postRequest = function(url, params, completion){
    $.ajax({
      url: url,
      type: 'POST',
      data: params,
      success: function(response){
        completion(null, response)
      },
      error: function(response){
        completion(response, null)
      }
    })
