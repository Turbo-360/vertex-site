				errorElement.textContent = result.error.message
				return
			}

			// this.setState({isLoading: false})
			console.log('TOKEN: ' + JSON.stringify(result.token))
      // TOKEN: {"id":"tok_1Ec1OwC5b8QCRB75s0gRulGY","object":"token","card":{"id":"card_1Ec1OvC5b8QCRB75VGbMWCWU","object":"card","address_city":"new york","address_country":"US","address_line1":"76 east 7th street","address_line1_check":"unchecked","address_line2":null,"address_state":null,"address_zip":"10003","address_zip_check":"unchecked","brand":"Visa","country":"US","cvc_check":"unchecked","dynamic_last4":null,"exp_month":3,"exp_year":2022,"funding":"debit","last4":"6856","metadata":{},"name":"denny kwon","tokenization_method":null},"client_ip":"173.73.93.73","created":1558319938,"email":"dennykwon2@gmail.com","livemode":true,"type":"card","used":false}

