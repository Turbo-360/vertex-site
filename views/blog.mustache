    {{>styles}}
		<style>
			.logo {
				width: 160px;
			}

      .post-content p {
        margin-bottom: 0px;
        line-height: 2.0;
        font-size: 18px;
      }

      .post-content img {
        margin: 12px 0px;
      }

      .post-header small {
        font-size: 14px;
      }

      .post-header hr {
        border-top: 1px solid #ddd;
      }

      .icon-avatar {
        border-radius: 50%;
        margin-right: 6px;
        padding: 4px;
        border: 1px solid #56b48c;
      }

      .author-container {
        display: flex;
        border-top: 1px solid #ddd;
        margin-top: 40px;
        padding: 20px 0px
      }

      .author-container h3 {
        text-transform: capitalize;
      }
		</style>
</head>
    <body>
      {{>nav}}

        <!-- features section -->
        <section class="py-6" id="features" style="background:#f9f9f9">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-8 col-lg-8">
                      {{#posts}}
                      <div>
                        <small style="color:#777">{{dateString}}</small>
                        <a href="/post/{{slug}}">
                          <h3 style="font-weight:400">{{title}}</h3>
                        </a>
                        <div style="display:flex" class="mb-5">
                          <div style="flex:1;padding-right:6px">
                            <p class="mb-1"><a style="box-shadow:none;color:#777" href="/post/{{slug}}">{{preview}}</a></p>
                            <img class="icon-avatar" src="{{{author.image}}}=s24-c" />
                            <small>{{author.username}}</small>
                          </div>
                          <div>
                            <a href="/post/{{slug}}">
                              <img src="{{{image}}}=s120-c" />
                            </a>
                          </div>
                        </div>
                      </div>

                      {{/posts}}
                    </div>

                    <div class="col-md-4 col-lg-4">

                    </div>
                </div>

            </div>
        </section>

        {{>register}}
        {{>footer}}
        {{>scripts}}
    </body>
</html>
